{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <div class="formularz">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        }%}
    {% endif %}
    {{ form_widget(form) }}


    <div class="b">
        <input type="submit" value="{{ submit_label }}" class="back"/>
    </div>

    {% if back_to_list_path|default(false) %}
        <div class="b">
            <a href="{{ url(back_to_list_path) }}" class="back">
                {{ 'action.back'|trans }}
            </a>
        </div>
    {% endif %}

    {{ form_end(form) }}
    </div>
{% endblock %}