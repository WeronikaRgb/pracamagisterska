        <li>
            <a href="{{ url('main_index') }}" title="{{ 'main_page'|trans }}">
                METAVERSE - SERWIS INFORMACYJNY
            </a>
        </li>
        <li>
            <a href="{{ url('main_index') }}" title="{{ 'main_page'|trans }}">
                STRONA GŁÓWNA
            </a>
        </li>
        <li>
